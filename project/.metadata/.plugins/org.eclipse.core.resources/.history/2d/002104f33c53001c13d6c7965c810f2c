package restaurant;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

import util.DatabaseUtil;

public class RDAO {

//	Connection conn = DatabaseUtil.getConnection();
	private Connection conn = null;
	private PreparedStatement stmt = null;
	private ResultSet rs = null;

	// SQL 명령어
	private final String USER_SELECT = "SELECT ID, PASSWORD, NAME, ROLE FROM USERS WHERE ID = ? AND PASSWORD = ?";
	
	/**
	 * 로그인
	 * @param vo
	 * @return
	 */
	public RDTO selectUserInfo(RDTO dto) {
		System.out.println("===> JDBC로 selectUserInfo() 기능처리");
		RDTO restaurant = null;
		try {
			conn = DatabaseUtil.getConnection();
			stmt = conn.prepareStatement(USER_SELECT);
			stmt.setInt(1, dto.getRnum());
			stmt.setString(2, vo.getPassword());
			rs = stmt.executeQuery();
			
			if (rs.next()) {
				user = new UserVO();
				user.setId(rs.getString("ID"));
				user.setPassword(rs.getString("PASSWORD"));
				user.setName(rs.getString("NAME"));
				user.setRole(rs.getString("ROLE"));
			}
		} catch(Exception e) {
			e.printStackTrace();
		} finally {
			JDBCUtil.close(rs, stmt, conn);
		}
		return user;
	}
}
