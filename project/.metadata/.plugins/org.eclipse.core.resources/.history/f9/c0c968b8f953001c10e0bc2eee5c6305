package restaurant;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

import util.DatabaseUtil;

public class RDAO {

//	Connection conn = DatabaseUtil.getConnection();
	private Connection conn = null;
	private PreparedStatement stmt = null;
	private ResultSet rs = null;

	// SQL 명령어
	private final String Restaurant_SELECT = "SELECT SEQ, NAME, ADDRESS, PHONE, CONTENT, AREA FROM RESTAURANT WHERE AREA = ? ";
	
	/**
	 * 로그인
	 * @param vo
	 * @return
	 */
	public RDTO selectRestaurant(RDTO dto) {
		System.out.println("===> JDBC로 selectRestaurant() 기능처리");
		RDTO restaurant = null;
		try {
			conn = DatabaseUtil.getConnection();
			stmt = conn.prepareStatement(Restaurant_SELECT);
			stmt.setString(1, dto.getArea());
			rs = stmt.executeQuery();
			
			if (rs.next()) {
				restaurant = new RDTO();
				restaurant.setSeq(rs.getInt("SEQ"));
				restaurant.setName(rs.getString("NAME"));
				restaurant.setAddress(rs.getString("ADDRESS"));
				restaurant.setPhone(rs.getString("PHONE"));
				restaurant.setContent(rs.getString("CONTENT"));
				restaurant.setArea(rs.getString("AREA"));
			}
		} catch(Exception e) {
			e.printStackTrace();
		} finally {
			DatabaseUtil.close(rs, stmt, conn);
		}
		return restaurant;
	}
}
